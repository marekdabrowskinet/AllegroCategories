<Window x:Class="AllegroCategories.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AllegroCategories"
        mc:Ignorable="d"
        Title="Allegro categories" Height="238" Width="829" ResizeMode="NoResize">
    <Grid>
        <TextBox x:Name="ClientID" HorizontalAlignment="Center" Margin="0,36,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="780"/>
        <Label Content="ClientID" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="Secret" HorizontalAlignment="Center" Margin="0,96,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="780"/>
        <Label Content="Secret" HorizontalAlignment="Left" Margin="10,70,0,0" VerticalAlignment="Top"/>
        <Button x:Name="GenerateTxt_btn" Content="Generate TXT file" HorizontalAlignment="Center" Margin="0,135,0,0" VerticalAlignment="Top" Width="780" Height="36" Click="GenerateTxt_btn_Click"/>

    </Grid>
</Window>
